<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", "cy-testId": "label-input-name" %>
    <%= form.text_field :name, "cy-testId": "input-name"%>
  </div>

  <div>
    <%= form.label :phrase, style: "display: block", "cy-testId": "label-input-phrase" %>
    <%= form.text_field :phrase, "cy-testId": "input-phrase" %>
  </div>

  <div>
    <%= form.label :promotion_id, style: "display: block", "cy-testId": "label-input-promotion"%>
    <%= form.collection_select :promotion_id, Promotion.order(:year),:id,:year, include_blank:false, "cy-testId": "input-promotion" %>
  </div>

  <div cy-testId="submit">
    <%= form.submit %>
  </div>
<% end %>
