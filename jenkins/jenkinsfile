pipeline {
    agent any
    stages{
        stage('Install') {
            steps {
                git branch: 'main', url: 'https://github.com/ajospino/Honorary.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t honorary:latest .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run --rm -it -v app-storage:/rails/storage --env-file .env --name honorapp -p 3000:3000 honorary:latest'
            }
        }
        stage('E2E') {
            steps {
                sh 'npm i'
                sh 'npm run e2e:record'
            }
        }
        stage('Stop and remove Docker container') {
            steps {
                sh 'docker stop honorapp'
            }
        }
    }
}