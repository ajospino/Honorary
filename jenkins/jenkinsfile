pipeline {
    agent any
    environment {
        CYPRESS_RECORD_KEY = credentials('63515d87-d3b1-41a9-9b51-2e69ce068b48')
    }
    stages{
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t honorary:latest .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker run --rm -it -v app-storage:/rails/storage --env-file .env --name honorapp -p 3000:3000 honorary:latest'
            }
        }
        stage('E2E') {
            steps {
                sh 'npm i'
                sh 'npm run cypress:run'
            }
        }
        stage('Stop and remove Docker container') {
            steps {
                sh 'docker stop honorapp'
                sh 'docker rm honorapp'
            }
        }
    }
}